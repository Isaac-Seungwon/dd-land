<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace == 호출할 Interface 이름 적기 -->
<mapper namespace="com.project.dd.mypage.ticket.mapper.MypageTicketMapper">

	<select id="list" parameterType="map" resultType="com.project.dd.mypage.ticket.domain.TicketDTO">
		select *
      from (select n.*, rownum as rnum from (select * from vwUserBook where email = #{email} order by book_date asc) n)
      where rnum between #{startIndex} and #{endIndex}
	</select>
	
	<delete id="delete">
		delete from tblUserBook where user_book_seq = #{selectedTickets}
	</delete>
	
	<select id="getTotalCount" resultType="int">
      select count(*) from vwUserBook
    </select>
	
</mapper>